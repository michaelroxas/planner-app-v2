  <p>
    <strong>Category:</strong>
    <%= @category.task %>
  </p>

  <%= link_to 'Edit', edit_category_path(@category) %> |
  <%= link_to 'Back', categories_path %>

  <h2>Add a task:</h2> 

  <%= form_with model: [ @category, @category.todos.build ] do |form| %>
    <p>
      <%= form.label :todo %><br>
      <%= form.text_field :todo %>
    </p>
      <p>
      <%= form.label :due_date %><br>
      <%= form.date_field :due_date %>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>

  <table>    
    <thead>
        <% @category.todos.each do |todo| %>
          <tr>
              <td><strong>task</strong></td>
              <td><strong>due date</strong></td>            
          </tr>
    </thead>
      <tr>
          <td><%= todo.todo %></td>
          <td><%= todo.due_date %></td>
          <td><%= link_to 'Delete', [todo.category, todo], method: :delete %> </td>
        <% end %> 
      </tr>
    </table>



